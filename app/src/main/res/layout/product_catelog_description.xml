<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:titleTextColor="@color/white"
            app:titleTextColor="@color/white" >

            <com.nsl.beejtantra.commonutils.CustomTextViewBold
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"

        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:layout_margin="@dimen/_8sdp"
           />

        <com.nsl.beejtantra.commonutils.CustomTextViewBold
            android:id="@+id/titlename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mallika - NCS 207 BG ||"
            android:textColor="?attr/colorPrimary"
            android:textSize="@dimen/_12sdp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>



    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/background_rect_green"
        android:padding="@dimen/_2sdp"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/colorPrimary">

    <com.nsl.beejtantra.commonutils.CustomTextViewNormal
        android:id="@+id/morohological"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Morphological Characters"
        android:layout_margin="@dimen/_5sdp"
        android:textSize="@dimen/_12sdp"
        android:textColor="@android:color/white"/>
    </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclercatelog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

        </android.support.v7.widget.RecyclerView>
            <WebView
                android:id="@+id/webview_html"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></WebView>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/spl_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.nsl.beejtantra.commonutils.CustomTextViewBold
            android:id="@+id/specialfeature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Special Features/USPs : "
            android:textColor="?attr/colorPrimary"
            android:layout_margin="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"/>

        <LinearLayout
            android:id="@+id/list_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>