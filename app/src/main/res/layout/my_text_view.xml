<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_rl"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_below="@+id/lltv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll1"
        android:weightSum="3">

        <EditText
            android:id="@+id/et_villagename1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_weight="1.5"
            android:background="@drawable/bgr"
            android:gravity="center"
            android:nextFocusForward="@+id/et_currentvillagesale1"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="@dimen/_11sdp" />

        <EditText
            android:id="@+id/et_currentvillagesale1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_weight="0.75"
            android:background="@drawable/bgr"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textSize="@dimen/_11sdp" />
        <com.nsl.beejtantra.CustomEditTextNormal
            android:id="@+id/et_villagepotential1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_weight="0.75"
            android:background="@drawable/bgr"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textSize="@dimen/_11sdp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/ll1"
        android:id="@+id/ll2"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_25sdp"
        android:weightSum="3">

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/ll2"
        android:id="@+id/ll3"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_25sdp"
        android:weightSum="3">

        <com.nsl.beejtantra.CustomEditTextNormal
            android:id="@+id/et_villagename3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_weight="1.5"
            android:background="@drawable/bgr"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="@dimen/_11sdp" />

        <com.nsl.beejtantra.CustomEditTextNormal
            android:id="@+id/et_currentvillagesale3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_weight="0.75"
            android:background="@drawable/bgr"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textSize="@dimen/_11sdp" />

        <com.nsl.beejtantra.CustomEditTextNormal
            android:id="@+id/et_villagepotential3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_weight="0.75"
            android:background="@drawable/bgr"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textSize="@dimen/_11sdp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/ll3"
        android:id="@+id/ll4"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_25sdp"
        android:weightSum="3">

        <com.nsl.beejtantra.CustomEditTextNormal
            android:id="@+id/et_villagename4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_weight="1.5"
            android:background="@drawable/bgr"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="@dimen/_11sdp" />

        <com.nsl.beejtantra.CustomEditTextNormal
            android:id="@+id/et_currentvillagesale4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_weight="0.75"
            android:background="@drawable/bgr"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textSize="@dimen/_11sdp" />
        <com.nsl.beejtantra.CustomEditTextNormal
            android:id="@+id/et_villagepotential4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_weight="0.75"
            android:background="@drawable/bgr"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textSize="@dimen/_11sdp" />


    </LinearLayout>

    <com.nsl.beejtantra.CustomEditTextNormal
        android:id="@+id/et_addall"
        android:layout_width="@dimen/_46sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ll1"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="@dimen/_14sdp"
        android:layout_marginBottom="0dp"
        android:visibility="gone"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:singleLine="true"
        android:text="remove"
        android:textColor="#ffffff"
        android:textSize="@dimen/_11sdp" />

</RelativeLayout>