<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.nsl.beejtantra.complaints.Complaintsselectactivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:title=" "
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <com.nsl.beejtantra.commonutils.CustomTextViewBold
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/complaints"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

            <com.nsl.beejtantra.ButtonPlus
                android:id="@+id/refresh"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_80sdp"
                android:background="@drawable/refresh"
                android:textColor="@color/white"
                android:visibility="gone" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <com.nsl.beejtantra.commonutils.CustomTextViewLight
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="@string/company"

            android:textSize="@dimen/_10sdp" />

        <Spinner
            android:id="@+id/spinCompany"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/spin_background"
            android:focusable="true"
            android:textSize="@dimen/_11sdp" />

        <android.widget.TextView
            android:id="@+id/tvInvisibleError1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingRight="50dp"
            android:paddingTop="0dp" />

        <include layout="@layout/line_view" />

        <com.nsl.beejtantra.commonutils.CustomTextViewLight
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="@string/division"

            android:textSize="@dimen/_10sdp" />

        <Spinner
            android:id="@+id/spinDivision"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@drawable/spin_background"
            android:textSize="@dimen/_11sdp" />

        <android.widget.TextView
            android:id="@+id/tvInvisibleError2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingRight="50dp"
            android:paddingTop="0dp" />

        <include layout="@layout/line_view" />

        <com.nsl.beejtantra.ButtonPlus
            android:id="@+id/go_to_complaints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@color/colorPrimary"
            android:padding="@dimen/_10sdp"
            android:text="go to complaints"
            android:textSize="@dimen/_12sdp"
            android:textAllCaps="true"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>
