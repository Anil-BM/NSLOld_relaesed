            android:gravity="center"/>-->
        <com.nsl.beejtantra.commonutils.CustomTextViewNormal
            android:id="@+id/tv_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="0.50"
            android:gravity="right"
            android:text="2500"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/edit_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_weight="0.50"
            android:gravity="center"
            android:src="@drawable/edit"
            android:textSize="@dimen/_11sdp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignLeft="@+id/tv_product"
        android:layout_alignStart="@+id/tv_product"
        android:layout_below="@+id/tv_product"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.nsl.beejtantra.commonutils.CustomTextViewNormal
            android:id="@+id/tv_scheme"
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_23sdp"

            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/schemebutton"
            android:gravity="center"
            android:text="S"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:textStyle="normal" />

        <com.nsl.beejtantra.commonutils.CustomTextViewNormal
            android:id="@+id/tv_schemedetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_scheme"
            android:layout_alignBottom="@+id/tv_scheme"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_toEndOf="@+id/tv_scheme"
            android:layout_toRightOf="@+id/tv_scheme"
            android:text="@string/_p_b"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />
