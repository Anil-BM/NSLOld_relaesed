<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.nsl.beejtantra.commonutils.CustomTextViewLight
            android:id="@+id/village_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/Village"
            android:textSize="@dimen/_12sdp" />

        <com.nsl.beejtantra.commonutils.CustomTextViewNormal
            android:id="@+id/village"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="0.7"
            android:singleLine="false"
            android:text="@string/Village"
            android:textSize="@dimen/_12sdp" />

        <com.nsl.beejtantra.commonutils.CustomTextViewLight
            android:id="@+id/division_lable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/division"
            android:textSize="@dimen/_12sdp" />

        <com.nsl.beejtantra.commonutils.CustomTextViewNormal
            android:id="@+id/division"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="0.7"
            android:singleLine="false"
            android:text="@string/division"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_layout"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.nsl.beejtantra.commonutils.CustomTextViewLight
            android:id="@+id/crop_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="Crop"
            android:textSize="@dimen/_12sdp" />

        <com.nsl.beejtantra.commonutils.CustomTextViewNormal
            android:id="@+id/crop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="0.7"
            android:singleLine="false"
            android:text="Crop"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/bottom_layout"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@android:color/darker_gray" />
</RelativeLayout>