<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/listview_header_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.nsl.beejtantra.commonutils.CustomTextViewNormal
                android:id="@+id/s_l"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="S#"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

            <com.nsl.beejtantra.commonutils.CustomTextViewNormal
                android:id="@+id/detail_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:text="DATE"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

            <com.nsl.beejtantra.commonutils.CustomTextViewNormal
                android:id="@+id/textViewTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="0.3"
                android:text="O.qty"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

            <com.nsl.beejtantra.commonutils.CustomTextViewNormal
                android:id="@+id/customTextViewNormal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="A.Qty"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

            <com.nsl.beejtantra.commonutils.CustomTextViewNormal
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.90"
                android:paddingRight="@dimen/_10sdp"
                android:gravity="right"
                android:text="Approved by"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

            <!--<com.nsl.beejtantra.commonutils.CustomTextViewNormal
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_weight="0.40"
                android:gravity="right"
                android:text="@string/amount"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />-->
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_scroll_third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:orientation="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/green" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="2">


            <com.nsl.beejtantra.commonutils.CustomTextViewNormal
                android:id="@+id/tv_sr_no"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="1."
                android:textColor="@color/black" />

            <com.nsl.beejtantra.commonutils.CustomTextViewNormal
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/itemcount"
                android:layout_alignBottom="@+id/itemcount"
                android:layout_gravity="center"
                android:layout_toEndOf="@+id/itemcount"
                android:layout_toRightOf="@+id/itemcount"
                android:layout_weight="0.50"
                android:text="12-01-2019"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <com.nsl.beejtantra.commonutils.CustomTextViewNormal
                android:id="@+id/tv_product"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/itemcount"
                android:layout_alignBottom="@+id/itemcount"
                android:layout_gravity="center"
                android:layout_toEndOf="@+id/itemcount"
                android:layout_toRightOf="@+id/itemcount"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="25000"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <com.nsl.beejtantra.commonutils.CustomTextViewNormal
                android:id="@+id/tv_qunatity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="2500"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

            <com.nsl.beejtantra.CustomEditTextNormal
                android:id="@+id/et_qty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_weight="0.25"
                android:background="@drawable/bgr"
                android:ems="5"
                android:gravity="center"
                android:hint=""
                android:inputType="number"
                android:maxLength="8"
                android:textSize="@dimen/_11sdp"
                android:visibility="gone" />

            <com.nsl.beejtantra.commonutils.CustomTextViewNormal
                android:id="@+id/tv_rate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.90"
                android:paddingRight="@dimen/_10sdp"
                android:gravity="right"
                android:text="250"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

            <!--  <com.nsl.beejtantra.commonutils.CustomTextViewNormal
                  android:id="@+id/tv_amount"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:layout_marginRight="@dimen/_10sdp"
                  android:layout_weight="0.40"
                  android:gravity="right"
                  android:text="2500"
                  android:textColor="@color/black"
                  android:textSize="@dimen/_10sdp"
                  android:textStyle="bold" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.nsl.beejtantra.commonutils.CustomTextViewNormal
                android:id="@+id/tv_scheme"
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_23sdp"
                android:layout_alignLeft="@+id/tv_product"
                android:layout_alignStart="@+id/tv_product"
                android:layout_below="@+id/tv_product"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/schemebutton"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:text="S"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                android:textStyle="normal" />

            <com.nsl.beejtantra.commonutils.CustomTextViewNormal
                android:id="@+id/tv_schemedetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_scheme"
                android:layout_alignBottom="@+id/tv_scheme"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_toEndOf="@+id/tv_scheme"
                android:layout_toRightOf="@+id/tv_scheme"
                android:text="@string/_p_b"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:background="@color/rowbottomcolor"></View>
    </LinearLayout>

</LinearLayout>